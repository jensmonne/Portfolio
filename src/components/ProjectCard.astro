---
interface Props {
    title: string;
    description: string;
    tags: string[];
    slug: string;
    image: string;
}

const { title, description, tags, slug, image } = Astro.props;
---

<a href={`/projects/${slug}`} class="card">
    <div class="image-wrapper">
        <img src={image} alt={title} />
    </div>
    <div class="card-content">
        <h3>{title}</h3>
        <p>{description}</p>
        <div class="tags">
            {tags.map((tag) => <span>{tag}</span>)}
        </div>
    </div>
</a>
