---
import "../css/style.css";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import { getCollection } from "astro:content";
import ProjectCard from "../components/ProjectCard.astro";
const allProjects = await getCollection("projects");
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>Jens' Portfolio</title>
        <link rel="icon" href="/favicon.svg" />
    </head>

    <body>
        <Navigation />

        <header class="hero">
            <h1>Hey, I'm Jens Monn√©</h1>
            <p>
                XR/VR developer specializing in Unity development. Also
                passionate about app development and homelabbing.
            </p>
            <div class="cta-group">
                <a href="#projects" class="btn primary">View Projects</a>
                <a href="#contact" class="btn secondary">Get in Touch</a>
            </div>
        </header>

        <section id="projects" class="container">
            <h2>My projects</h2>
            <div class="grid">
                {
                    allProjects.map((project) => (
                        <ProjectCard
                            title={project.data.title}
                            description={project.data.description}
                            tags={project.data.tags}
                            slug={project.slug}
                            image={project.data.image}
                        />
                    ))
                }
            </div>
        </section>

        <section id="skills" class="container">
            <h2>Tech Stack</h2>
            <div class="skills-grid">
                <div class="skill-item">Unity (C#)</div>
                <div class="skill-item">Unreal (C++)</div>
                <div class="skill-item">Rust</div>
                <div class="skill-item">HTML</div>
                <div class="skill-item">CSS</div>
                <div class="skill-item">JavaScript</div>
                <div class="skill-item">Astro</div>
                <div class="skill-item">Bun</div>
            </div>
        </section>

        <Footer />
    </body>
</html>
